  <Style x:Key="ExpanderButtonStyle" TargetType="{x:Type ToggleButton}">
    <Setter Property="UIElement.Focusable" Value="False" />
    <Setter Property="FrameworkElement.Width" Value="15" />
    <Setter Property="FrameworkElement.Height" Value="15" />
    <Setter Property="FrameworkElement.Margin" Value="0,0,0,0" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ToggleButton}">
          <Border Name="ExpandButtonBorder" Background="#00FFFFFF"
                  Width="{TemplateBinding Width}"
                  Height="{TemplateBinding Height}">
            <Path Name="ExpandPath" Margin="0,0,0,0"
                  VerticalAlignment="{TemplateBinding VerticalAlignment}"
                  HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                  SnapsToDevicePixels="True" Fill="{StaticResource SelectedForeground}"
                  StrokeThickness="1" Stroke="{StaticResource SelectedForeground}"
                  Data="{StaticResource TreeArrow}">
              <UIElement.RenderTransform>
                <RotateTransform RotateTransform.Angle="135" RotateTransform.CenterX="3" RotateTransform.CenterY="3" />
              </UIElement.RenderTransform>
            </Path>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Trigger.Property="ToggleButton.IsChecked" Trigger.Value="True">
              <Setter TargetName="ExpandPath" Property="UIElement.RenderTransform">
                <Setter.Value>
                  <RotateTransform RotateTransform.Angle="180" RotateTransform.CenterX="3" RotateTransform.CenterY="3" />
                </Setter.Value>
              </Setter>
              <Setter TargetName="ExpandPath" Property="FrameworkElement.Margin" Value="0" />
            </Trigger>
            <Trigger Trigger.Property="ToggleButton.IsChecked" Trigger.Value="False">
              <Setter TargetName="ExpandPath" Property="FrameworkElement.HorizontalAlignment"
                      Value="Left" />
              <Setter TargetName="ExpandButtonBorder" Property="FrameworkElement.Margin"
                      Value="2,0,0,0" />
            </Trigger>
            <Trigger Trigger.Property="UIElement.IsMouseOver" Trigger.Value="True">
              <Setter TargetName="ExpandPath" Value="{StaticResource Blend_ExpanderSignBrush}"
                      Property="Shape.Stroke" />
              <Setter TargetName="ExpandPath" Value="{StaticResource Blend_ExpanderSignBrush}"
                      Property="Shape.Fill" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
