  <Style x:Key="BlendPropertyViewItemStyle" TargetType="{x:Type local:PropertyViewItem}">
    <Setter Property="FrameworkElement.FocusVisualStyle" Value="{x:Null}" />
    <Setter Property="IsTabStop" Value="False" />
    <Setter Property="local:PropertyViewItem.EditorTemplate"
            Value="{StaticResource PropertyNameTemplate}" />
    <Setter Property="Background"
            Value="{Binding Path=PropertyView.ViewBackgroundColor,RelativeSource={RelativeSource Self},Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
    <Setter Property="BorderThickness" Value="0 0 0 1" />
    <Setter Property="Padding" Value="0,2" />
    <Setter Property="BorderBrush" Value="#FFD3D3D3" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:PropertyViewItem}">
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition RowDefinition.Height="Auto" />
              <RowDefinition RowDefinition.Height="*" />
            </Grid.RowDefinitions>
            <Grid x:Name="PART_PropertyView">
              <Border Name="Bd" Background="{TemplateBinding Background}"
                      BorderBrush="{TemplateBinding BorderBrush}"
                      SnapsToDevicePixels="True"
                      BorderThickness="{TemplateBinding BorderThickness}">
                <Grid x:Name="ViewGrid">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Name="Part_Col" />
                    <ColumnDefinition Width="1" />
                    <ColumnDefinition MinWidth="44"
                                      Width="{Binding RelativeSource={RelativeSource TemplatedParent},Path=ResizeColumn2,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                  </Grid.ColumnDefinitions>
                  <Border Name="Border" Background="{TemplateBinding Background}"
                          SnapsToDevicePixels="True">
                    <Grid
                      Margin="{Binding PropertyLevel,Mode=OneWay,Converter={StaticResource LevelConverter}}">
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Name="expanderColumn" Width="5" />
                        <ColumnDefinition Width="*" />
                      </Grid.ColumnDefinitions>
                      <ToggleButton ToggleButton.Name="NestedToggleButton"
                                    Style="{StaticResource ExpanderButtonStyle}"
                                    Tag="ViewItem" Width="15"
                                    Height="15" HorizontalAlignment="Center"
                                    VerticalAlignment="Center" Visibility="Collapsed"
                                    ToggleButton.IsChecked="{Binding Path=IsExpanded,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}" />
                      <ContentPresenter ContentPresenter.Name="PART_Content"
                                        Margin="{TemplateBinding Padding}" Grid.Column="1"
                                        ContentPresenter.ContentTemplate="{TemplateBinding local:PropertyViewItem.EditorTemplate}"
                                        ContentPresenter.Content="{TemplateBinding HeaderedItemsControl.Header}" />
                    </Grid>
                  </Border>
                  <GridSplitter IsTabStop="False" Width="1"
                                Background="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                HorizontalAlignment="Stretch" Grid.Column="1"
                                Visibility="{TemplateBinding IsCategoryEditorEnabled,Converter={StaticResource InvertBooleanVisibilityConverter}}" />
                  <ContentPresenter ContentPresenter.Name="PART_Content1" Grid.Column="2"
                                    ContentPresenter.ContentTemplate="{StaticResource PropertyValueTemplate}"
                                    ContentPresenter.Content="{TemplateBinding HeaderedItemsControl.Header}"
                                    Visibility="{TemplateBinding IsCategoryEditorEnabled,Converter={StaticResource InvertBooleanVisibilityConverter}}" />
                </Grid>
              </Border>
              <Border Name="PropertySideborder" SnapsToDevicePixels="True" BorderThickness="0"
                      HorizontalAlignment="Left" Width="25">
                <ToggleButton ToggleButton.Name="ToggleButton"
                              Style="{StaticResource ExpanderButtonStyle}"
                              HorizontalAlignment="Center" VerticalAlignment="Center"
                              Width="15" Height="15" Visibility="Collapsed"
                              ToggleButton.IsChecked="{Binding Path=IsExpanded,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}" />
              </Border>
            </Grid>
            <ItemsPresenter ItemsPresenter.Name="SubItemPresenter" Visibility="Collapsed" Grid.Row="1" />
          </Grid>
          <ControlTemplate.Triggers>
            <Trigger Trigger.Property="UIElement.IsVisible" Trigger.Value="True">
              <Setter TargetName="Part_Col"
                      Value="{Binding Path=PropertyNameColumnDefinition,RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type local:PropertyGrid}},Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                      Property="ColumnDefinition.Width" />
            </Trigger>
            <MultiDataTrigger>
              <MultiDataTrigger.Conditions>
                <Condition Binding="{Binding Path=PropertyExpandMode,RelativeSource={RelativeSource Self}}"
                           Value="FlatMode" />
              </MultiDataTrigger.Conditions>
              <Setter TargetName="expanderColumn" Property="ColumnDefinition.Width" Value="25" />
            </MultiDataTrigger>
            <DataTrigger DataTrigger.Value="NestedMode"
                         DataTrigger.Binding="{Binding Path=PropertyExpandMode,RelativeSource={RelativeSource Self}}">
              <Setter TargetName="ToggleButton" Property="UIElement.Visibility" Value="Collapsed" />
              <Setter TargetName="NestedToggleButton"
                      Value="{Binding HasChildren,RelativeSource={RelativeSource TemplatedParent},Converter={StaticResource BooleanToVisibilityConverter}}"
                      Property="UIElement.Visibility" />
              <Setter TargetName="expanderColumn" Property="ColumnDefinition.Width" Value="25" />
            </DataTrigger>
            <MultiDataTrigger>
              <MultiDataTrigger.Conditions>
                <Condition Binding="{Binding Path=PropertyExpandMode,RelativeSource={RelativeSource Self}}"
                           Value="NestedMode" />
                <Condition Binding="{Binding Path=PropertyLevel}" Value="1" />
              </MultiDataTrigger.Conditions>
              <Setter TargetName="NestedToggleButton" Property="UIElement.Visibility"
                      Value="Collapsed" />
              <Setter TargetName="ToggleButton"
                      Value="{Binding HasChildren,RelativeSource={RelativeSource TemplatedParent},Converter={StaticResource BooleanToVisibilityConverter}}"
                      Property="UIElement.Visibility" />
            </MultiDataTrigger>
            <MultiTrigger>
              <MultiTrigger.Conditions>
                <Condition SourceName="ToggleButton" Property="UIElement.Visibility"
                           Value="Visible" />
                <Condition SourceName="ToggleButton" Property="ToggleButton.IsChecked"
                           Value="True" />
              </MultiTrigger.Conditions>
              <Setter TargetName="SubItemPresenter" Property="UIElement.Visibility"
                      Value="Visible" />
            </MultiTrigger>
            <MultiTrigger>
              <MultiTrigger.Conditions>
                <Condition SourceName="NestedToggleButton" Property="UIElement.Visibility"
                           Value="Visible" />
                <Condition SourceName="NestedToggleButton" Property="ToggleButton.IsChecked"
                           Value="True" />
              </MultiTrigger.Conditions>
              <Setter TargetName="SubItemPresenter" Property="UIElement.Visibility"
                      Value="Visible" />
            </MultiTrigger>
            <!--<Trigger Trigger.Property="SkinStorage.EnableTouch" Trigger.Value="True">
              <Setter TargetName="Bd" Property="FrameworkElement.Height" Value="50" />
              <Setter TargetName="PART_Content" Property="TextElement.FontSize" Value="18" />
              <Setter TargetName="PART_Content1" Property="TextElement.FontSize" Value="18" />
            </Trigger>-->
            <MultiTrigger>
              <MultiTrigger.Conditions>
                <Condition Property="local:PropertyViewItem.IsSelected" Value="True" />
                <!--<Condition Property="local:PropertyViewItem.IsCategoryEditorEnabled" Value="False" />-->
              </MultiTrigger.Conditions>
              <Setter TargetName="Border" Value="{StaticResource SelectedBackground}"
                      Property="Border.Background" />
              <Setter TargetName="Border" Value="{StaticResource SelectedForeground}"
                      Property="TextElement.Foreground" />
            </MultiTrigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
    <Setter Property="ItemsControl.ItemsPanel">
      <Setter.Value>
        <ItemsPanelTemplate>
          <VirtualizingStackPanel VirtualizingPanel.VirtualizationMode="Recycling" />
        </ItemsPanelTemplate>
      </Setter.Value>
    </Setter>
  </Style>
