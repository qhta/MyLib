<Window x:Class="Qhta.UnicodeBuild.Views.SelectValueWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Qhta.UnicodeBuild.Views"
             xmlns:resources="clr-namespace:Qhta.UnicodeBuild.Resources"
             xmlns:commands="clr-namespace:Qhta.UnicodeBuild.Commands"
             xmlns:sys="clr-namespace:System.Globalization;assembly=System.Runtime"
             mc:Ignorable="d" 
             Height="500" Width="300">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <TextBlock 
      Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:SelectValueWindow}},
        Path= Prompt}"
       Margin="10,5"
      />
    <ListBox 
       Grid.Row="1"
       ItemsSource="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:SelectValueWindow}},
        Path= ItemsSource}"
       SelectedItem="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:SelectValueWindow}},
         Path= SelectedItem, Mode=TwoWay}"        
       Margin="10,5"
       >
      <ListBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding Name, FallbackValue=''}"
                     ToolTip ="{Binding Description}"
                     />
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

    <CheckBox 
      Grid.Row="2"
      Margin="10,5"
      Visibility="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:SelectValueWindow}},
      Path= ShowOverwriteNonEmptyCells, Converter={StaticResource BoolToVisibilityConverter}}"     
      IsChecked="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:SelectValueWindow}},
        Path= OverwriteNonEmptyCells}"
      Content="{x:Static resources:Strings.OverwriteNonEmptyCells}"/>
    <ComboBox 
      Grid.Row="3"
      Margin="10,5"
      Width="200"
      HorizontalAlignment="Left"
      Visibility="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:SelectValueWindow}},
      Path= ShowFindInSequence, Converter={StaticResource BoolToVisibilityConverter}}" 
      ItemsSource="{Binding Source={StaticResource FindInSequenceProvider}}"
      SelectedItem="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:SelectValueWindow}},
        Path= FindInSequence}">
      <ComboBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding Converter={StaticResource FindInSequenceConverter},
            ConverterCulture={x:Static sys:CultureInfo.CurrentUICulture}}" />
        </DataTemplate>
      </ComboBox.ItemTemplate>
    </ComboBox>
    <WrapPanel 
      Grid.Row="4"
      Orientation="Horizontal"
      HorizontalAlignment="Center"
      Margin="10,5"
      >
      <Button x:Name="OkButton" Content="{x:Static resources:Strings.OK}" Width="80" Click="OkButton_OnClick"/>
      <Button x:Name="CancelButton" Content="{x:Static resources:Strings.Cancel}" Width="80" Click="CancelButton_OnClick" 
              IsCancel="True"
              Margin="10,0,0,0"/>
    </WrapPanel>
  </Grid>
</Window>
