<UserControl x:Class="Qhta.UnicodeBuild.Views.NewWritingSystemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:Qhta.UnicodeBuild.Views"
             xmlns:vm="clr-namespace:Qhta.UnicodeBuild.ViewModels"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             xmlns:helpers="clr-namespace:Qhta.UnicodeBuild.Helpers"
             xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=System.ComponentModel.TypeConverter"
             xmlns:collections="clr-namespace:System.Collections;assembly=System.Runtime"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:converters="clr-namespace:Qhta.WPF.Converters;assembly=Qhta.WPF.Converters"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:WritingSystemViewModel}"
             d:DesignHeight="350" d:DesignWidth="400">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="30"/>
      <RowDefinition Height="30"/>
      <RowDefinition Height="30"/>
      <RowDefinition Height="30"/>
      <RowDefinition Height="30"/>
      <RowDefinition Height="30"/>
      <RowDefinition Height="30"/>
      <RowDefinition Height="30"/>
      <RowDefinition Height="30"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Label 
      Grid.Column="0" Grid.Row="0" 
      Content="Name"/>
    <TextBox 
      Grid.Column="1" Grid.Row="0" 
      Margin="10,6"
      Text="{Binding Name}"/>
    <Label 
      Grid.Column="0" Grid.Row="1" 
      Content="Parent"/>
    <ComboBox 
      Grid.Column="1" Grid.Row="1" 
      Margin="10,6"
      HorizontalAlignment="Left"
      Width="250"
      SelectedItem="{Binding Parent}"
      DisplayMemberPath="FullName"
      ItemsSource="{Binding Source={StaticResource ViewModels}, 
           Path=Instance.SelectableWritingSystems}"/>
    <Label 
      Grid.Column="0" Grid.Row="2" 
      Content="Type"/>
    <ComboBox 
      Grid.Column="1" Grid.Row="2" 
      Margin="10,6"
      HorizontalAlignment="Left"
      Width="150"
      SelectedItem="{Binding Type}"
      DisplayMemberPath="Type" 
      SelectedValuePath="Id"
      ItemsSource="{Binding Source={StaticResource ViewModels}, 
            Path=Instance.WritingSystemTypes}"/>
    <Label 
      Grid.Column="0" Grid.Row="3" 
      Content="Kind"/>
    <ComboBox 
      Grid.Column="1" Grid.Row="3" 
      Margin="10,6"
      HorizontalAlignment="Left"
      Width="150"
      SelectedItem="{Binding Kind}"
      DisplayMemberPath="Kind" 
      SelectedValuePath="Id"
      ItemsSource="{Binding Source={StaticResource ViewModels}, 
            Path=Instance.WritingSystemKinds}"/>
    <Label 
      Grid.Column="0" Grid.Row="4" 
      Content="Key phrase"/>
    <TextBox 
      Grid.Column="1" Grid.Row="4" 
      Margin="10,6"
      Text="{Binding KeyPhrase}"/>
    <Label 
      Grid.Column="0" Grid.Row="5" 
      Content="Ctg"/>
    <TextBox 
      Grid.Column="1" Grid.Row="5" 
      Margin="10,6"
      Width="60"
      HorizontalAlignment="Left"
      Text="{Binding Ctg}"/>
    <Label 
      Grid.Column="0" Grid.Row="6" 
      Content="ISO"
      VerticalContentAlignment="Center"/>
    <TextBox 
      Grid.Column="1" Grid.Row="6" 
      Margin="10,6"
      Width="60"
      HorizontalAlignment="Left"
      Text="{Binding Iso}"/>
    <Label 
      Grid.Column="0" Grid.Row="7" 
      Content="Abbr"/>
    <TextBox 
      Grid.Column="1" Grid.Row="7" 
      Margin="10,6"
      Width="60"
      HorizontalAlignment="Left"
      Text="{Binding Abbr}"/>
    <Label 
      Grid.Column="0" Grid.Row="8" 
      Content="Ext"/>
    <TextBox 
      Grid.Column="1" Grid.Row="8" 
      Margin="10,6"
      Width="60"
      HorizontalAlignment="Left"
      Text="{Binding Ext}"/>
    <Label 
      Grid.Column="0" Grid.Row="9" 
      Content="Description"/>
    <TextBox 
      Grid.Column="1" Grid.Row="9" 
      Margin="10,6"
      TextWrapping="Wrap"
      Text="{Binding Ext}"/>
  </Grid>
</UserControl>
