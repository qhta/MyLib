<UserControl x:Class="Qhta.UnicodeBuild.Views.NewWritingSystemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             xmlns:pt="http://propertytools.org/wpf"
             xmlns:vm="clr-namespace:Qhta.UnicodeBuild.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:WritingSystemViewModel}"
             d:DesignHeight="350" d:DesignWidth="400">
  <UserControl.Resources>
    <DataTemplate x:Key="EmptyDataTemplate">

    </DataTemplate>
    <ControlTemplate x:Key="CategoryControlTemplate1"  TargetType="{x:Type HeaderedContentControl}">
      <Grid Margin="0 8 0 0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ContentPresenter ContentSource="Header" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
        <!--<Separator Grid.Column="1" Margin="4 3 0 0"/>-->
        <ContentPresenter Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="0" />
      </Grid>
    </ControlTemplate>
  </UserControl.Resources>
  <Grid>
    <pt:PropertyGrid
      DataContext="{StaticResource ViewModels}"
      SelectedObject="{Binding Instance.AllWritingSystems.NewWritingSystem}"
      ControlFactory="{StaticResource PropertyControlFactory}"
      Operator="{StaticResource PropertyModelOperator}"
      ShowDeclaredOnly="True"
      ShowReadOnlyProperties="false"
      TabVisibility="Collapsed"
      CategoryControlType="Template"
      CategoryHeaderTemplate="{StaticResource EmptyDataTemplate}"
      CategoryControlTemplate="{StaticResource CategoryControlTemplate1}"
      />
    <!--
    ControlFactory="{StaticResource CustomControlFactory}"
      Operator="{StaticResource CustomOperator}"
      CategoryControlTemplate="{StaticResource CategoryControlTemplate1}"
      CategoryHeaderTemplate="{StaticResource HeaderTemplate1}"
      TabHeaderTemplate="{StaticResource HeaderTemplate2}"
      TabPageHeaderTemplate="{StaticResource PageHeaderTemplate1}"

      Margin="8" 
      DescriptionIcon="Images\lightbulb.png"
      VerticalPropertySpacing="{Binding ElementName=VerticalPropertySpacing, Path=Value}"-->

  </Grid>
</UserControl>
