<Window x:Class="Qhta.UnicodeBuild.Views.NewWritingSystemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Qhta.UnicodeBuild.Views"
        mc:Ignorable="d"
        d:DataContext="{Binding Source={StaticResource ViewModels}, Path=Instance.AllWritingSystems.NewWritingSystem}"
        Title="New Writing System" Height="450" Width="400">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="50"/>
    </Grid.RowDefinitions>
    <views:NewWritingSystemView />
    <StackPanel 
      Grid.Row="1" Orientation="Horizontal"
      HorizontalAlignment="Center">
       <Button 
         Content="Cancel" 
         Command="{Binding RelativeSource={RelativeSource AncestorType=Window},
            Path=CancelCommand}"
         Margin="20,10" Padding="10,0"/>
       <Button 
         Content="OK" 
         Command="{Binding RelativeSource={RelativeSource AncestorType=Window},
            Path=AddWritingSystemCommand}"
         CommandParameter="{Binding}"
         Margin="20,10" Padding="10,0"/>
    </StackPanel>
  </Grid>
</Window>
