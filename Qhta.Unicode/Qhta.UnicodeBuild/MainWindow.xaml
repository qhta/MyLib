<Window x:Class="Qhta.UnicodeBuild.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Qhta.UnicodeBuild"
        xmlns:views="clr-namespace:Qhta.UnicodeBuild.Views"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DragEnter="Window_DragEnter"
        DragOver="Window_DragOver"
        Drop="Window_Drop">
  <Grid>
    <syncfusion:TabControlExt Name="MainTabControl">
      <syncfusion:TabItemExt Header="Unicode Blocks"
                             MouseDown="TabItem_MouseDown"
                             MouseMove="TabItem_MouseMove"
                             >
        <views:UcdBlocksView/>
      </syncfusion:TabItemExt>
    </syncfusion:TabControlExt>
  </Grid>
</Window>