<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1;net8.0</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>readme.md</PackageReadmeFile>
        <BaseOutputPath>..\..\bin</BaseOutputPath>
        <Version>1.2.1</Version>
        <GenerateDocumentationFile>True</GenerateDocumentationFile>
        <DocumentationFile></DocumentationFile>

    
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Qhta.Collections" Version="4.7.0" />
    <PackageReference Include="Qhta.TextUtils" Version="3.5.0" />
    <None Include="docs\readme.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="docs\" />
  </ItemGroup>

  <ItemGroup>
    <ContentWithTargetPath Include="ScriptCodes.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>$(OutDir)..\..\..\ScriptCodes.txt</TargetPath>
    </ContentWithTargetPath>
    <None Include="ScriptCodes.txt" />
  </ItemGroup>

  <ItemGroup>
    <ContentWithTargetPath Include="GenCharNameWordAbbr.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>$(OutDir)..\..\..\GenCharNameWordAbbr.txt</TargetPath>
    </ContentWithTargetPath>
    <None Include="GenCharNameWordAbbr.txt" />
  </ItemGroup>

  <ItemGroup>
    <ContentWithTargetPath Include="GenCharNameStringRepl.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>$(OutDir)..\..\..\GenCharNameStringRepl.txt</TargetPath>
    </ContentWithTargetPath>
    <None Include="GenCharNameStringRepl.txt" />
  </ItemGroup>
</Project>
