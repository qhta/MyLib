<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net6.0;net7.0;net8.0</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <BaseOutputPath>..\..\bin</BaseOutputPath>
    <AppendTargetFrameworkToOutputPath>true</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <RootNamespace>Qhta.Xml.Serialization</RootNamespace>
    <Description>Flexible implementation of XmlSerializer</Description>
    <Authors>Yarreck Qhta</Authors>
    <Version>3.0</Version>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="docs\readme.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="SerializationTest\**" />
    <EmbeddedResource Remove="SerializationTest\**" />
    <None Remove="SerializationTest\**" />
  </ItemGroup>



  <ItemGroup>
    <PackageReference Include="Qhta.TestHelper" Version="3.0.0" />
    <PackageReference Include="Qhta.TextUtils" Version="3.8.0" />
    <PackageReference Include="Qhta.TypeUtils" Version="1.4.0" />
    <PackageReference Include="System.CodeDom" Version="8.0.0" />
    <PackageReference Include="System.Collections.Specialized" Version="4.3.0" />
    <PackageReference Include="System.Security.Permissions" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="docs\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Qhta.Conversion\Qhta.Conversion.csproj" />
    <ProjectReference Include="..\Qhta.Xml.Reflection\Qhta.Xml.Reflection.csproj" />
    <ProjectReference Include="..\Qhta.Xml\Qhta.Xml.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
    <PackageReference Include="Microsoft.EntityFrameworkCore.Abstractions">
      <Version>9.0.9</Version>
    </PackageReference>
  </ItemGroup>

</Project>
