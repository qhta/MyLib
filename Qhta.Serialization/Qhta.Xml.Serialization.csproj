<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <BaseOutputPath>D:\VS\Projects\MyLib\bin</BaseOutputPath>
    <AppendTargetFrameworkToOutputPath>true</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <RootNamespace>Qhta.Xml.Serialization</RootNamespace>
    <Description>Flexible implementation of XmlSerializer</Description>
    <Authors>Yarreck Qhta</Authors>
    <Version>1.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="SerializationTest\**" />
    <EmbeddedResource Remove="SerializationTest\**" />
    <None Remove="SerializationTest\**" />
  </ItemGroup>



  <ItemGroup>
    <PackageReference Include="Qhta.Collections" Version="2.0.0" />
    <PackageReference Include="Qhta.TextUtils" Version="3.1.0" />
    <PackageReference Include="Qhta.TypeUtils" Version="1.3.5" />
    <PackageReference Include="System.CodeDom" Version="7.0.0" />
    <PackageReference Include="System.Collections.Specialized" Version="4.3.0" />
    <PackageReference Include="System.Security.Permissions" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Qhta.Conversion\Qhta.Conversion.csproj" />
    <ProjectReference Include="..\Qhta.Xml.Reflection\Qhta.Xml.Reflection.csproj" />
    <ProjectReference Include="..\Qhta.Xml\Qhta.Xml.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="docs\" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Qhta.TextUtils">
      <HintPath>..\bin\Debug\net6.0\Qhta.TextUtils.dll</HintPath>
    </Reference>
    <Reference Include="Qhta.TypeUtils">
      <HintPath>..\bin\Debug\net6.0\Qhta.TypeUtils.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
