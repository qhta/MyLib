<UserControl 
    x:Class="Imagin.Common.SelectionCanvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Imagin.Common"
    mc:Ignorable="d" 
    d:DesignHeight="300" 
    d:DesignWidth="300"
    x:Name="PART_SelectionCanvas">
    <Grid 
        x:Name="PART_Grid"
        DataContext="{Binding ElementName=PART_SelectionCanvas}"
        Background="Transparent"
        MouseDown="OnDrawDown"
        MouseMove="OnDrawMove"
        MouseUp="OnDrawUp">
        <local:DragSelection Selection="{Binding Selection}"/>
    </Grid>
</UserControl>
