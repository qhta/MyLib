<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Imagin.Common">
    <Style x:Key="{x:Type local:DragSelection}" TargetType="{x:Type local:DragSelection}">
        <Setter Property="Background" Value="{DynamicResource Brush.DragSelection.Background}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.DragSelection.Border}"/>
    </Style>
</ResourceDictionary>