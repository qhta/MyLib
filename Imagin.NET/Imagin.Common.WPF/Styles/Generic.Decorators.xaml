<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Imagin.Common">
    <Style x:Key="{x:Type local:RippleDecorator}" TargetType="{x:Type local:RippleDecorator}">
        <Setter Property="RippleDuration" Value="0:0:0.75"/>
        <Setter Property="FromStrokeThickness" Value="15"/>
        <Setter Property="MaximumRadius" Value="75"/>
        <Setter Property="ToStrokeThickness" Value="30"/>
    </Style>
</ResourceDictionary>