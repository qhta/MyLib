<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <BaseOutputPath>D:\VS\Projects\MyLib\bin</BaseOutputPath>
    <AppendTargetFrameworkToOutputPath>true</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <RootNamespace>Qhta.Xml</RootNamespace>
    <Description>Types needed to supplement System.Reflection for Xml serialization</Description>
    <Authors>Yarreck Qhta</Authors>
    <Version>2.0</Version>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="docs\readme.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="FilteredMembersCollection.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Qhta.Collections" Version="4.0.0" />
    <PackageReference Include="Qhta.TextUtils" Version="3.1.1" />
    <PackageReference Include="Qhta.TypeUtils" Version="1.3.10.1" />
    <PackageReference Include="Qhta.Xml" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="docs\readme.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>

