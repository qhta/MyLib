<UserControl x:Class="Qhta.WPF.Controls.CustomColorForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Qhta.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="250"
             MinHeight="320">
  <Grid>
    <StackPanel Orientation="Vertical">
      <Grid  Margin="10,10,0,0" >
        <Border BorderBrush="Black" BorderThickness="2" 
                    HorizontalAlignment="Center" VerticalAlignment="Top"
                        Background="Black"
                        Width="145" Height="145">
        </Border>
        <Image x:Name="image"  Width="140" Height="140" Stretch="UniformToFill"
              HorizontalAlignment="Center"
              VerticalAlignment="Top" Margin="2"
               Source="/Qhta.WPF.Controls;component/Resources/colorChart.PNG"
              />
        <Canvas x:Name="CanColor"  Width="140" Height="140" 
                       HorizontalAlignment="Center"
                       Background="Transparent"
                       VerticalAlignment="Top" Margin="2"  >
          <Ellipse x:Name="EpPointer" Width="8" 
                   Canvas.Left="-2"
                   Canvas.Top="-2"
                   Height="8" Stroke="Black" Fill="White" 
                   />
        </Canvas>
      </Grid>

      <StackPanel Margin="0,10,0,0" Orientation="Horizontal" >
        <Label Content="Alpha" 
               Margin="5,0,0,0" 
               Width="55"
               HorizontalContentAlignment="Right"
               FontWeight="Bold"/>
        <local:NumericEditBox x:Name="AlphaTextBox" 
                TabIndex="0"  MaxLength="3" Width="55"
                Padding="0,3,0,0"
                Margin="2,1,0,1"
                Minimum="0"
                Maximum="255"
                ValueChanged="AlphaTextBox_ValueChanged"/>
        <Slider Orientation="Horizontal"
                Minimum="0"
                Maximum="255"
                Width="100"
                Margin="0,5,0,0"
                Value="{Binding ElementName=AlphaTextBox, Path=Value}"
                />
      </StackPanel>
      <StackPanel Margin="0,10,0,0" Orientation="Horizontal"  >
        <Label Content="R" 
               Margin="5,0,0,0"
               FontWeight="Bold"
               Width="55"
               HorizontalContentAlignment="Right"
               />
        <TextBox x:Name="RedTextBox" 
                 TabIndex="1" MaxLength="3"  Width="35" 
                 Padding="0,3,0,0"
                 Margin="2,1,2,1" />
        <Label Content="G" 
               Margin="1,0,0,0"
               FontWeight="Bold"
               Width="20"
               HorizontalContentAlignment="Right"
               />
        <TextBox x:Name="GreenTextBox" 
                 TabIndex="2" MaxLength="3" Width="35" 
                 Padding="0,3,0,0"
                 Margin="2,1,2,1" />
        <Label Content="B" 
               Margin="1,0,0,0"
               FontWeight="Bold"
               Width="20"
               HorizontalContentAlignment="Right"
               />
        <TextBox x:Name="BlueTextBox" 
                 TabIndex="3" MaxLength="3" Width="35" 
                 Padding="0,3,0,0"
                 Margin="2,1,2,1" />
      </StackPanel>

      <StackPanel Orientation="Horizontal"  Margin="5,5,0,0">
        <Label Content="Hex" 
               Margin="5,0,0,0" 
               FontWeight="Bold"
               HorizontalContentAlignment="Right"
               Width="55"
               />
        <TextBox x:Name="HexTextBox" 
                 TabIndex="4"
                 Padding="0,3,0,0"
                 />
      </StackPanel>

      <StackPanel Margin="5,10,0,0"  Orientation="Horizontal" >
        <Label Content="Preview" Margin="5,0,0,0" HorizontalAlignment="Left" 
                        FontWeight="Bold" VerticalAlignment="Center"/>

        <Border  Width="75"   Height="30"
                 BorderBrush="Black" BorderThickness="1"
                         >
          <Grid>
            <Image Source="/Qhta.WPF.Controls;component/Resources/OpacityPattern.PNG"/>
            <Rectangle x:Name="PreviewRectangle"  Fill="Transparent"/>
          </Grid>
          <!--<Label Name="lblPreview"    
                 Height="30"  
                 Foreground="Black"   FontWeight="Bold" VerticalAlignment="Center"/>-->
        </Border>
      </StackPanel>
    </StackPanel>
  </Grid>
</UserControl>
