<Window x:Class="TestApp.Border3DTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:Qhta.WPF.Controls;assembly=Qhta.WPF.Controls" 
        Title="Border3DTestWindow" Height="300" Width="600">
  <Grid Background="{x:Static SystemColors.ControlBrush}">
    <my:Border3D Margin="5" Layout3D="Engraved" >
      <my:Border3D Layout3D="Embossed">
        <Grid Background="{x:Static SystemColors.ControlBrush}"/>
      </my:Border3D>
    </my:Border3D>
  </Grid>
</Window>
