<UserControl x:Class="Qhta.SF.WPF.Tools.Views.SpecificValueEdit"
     x:Name="TextEdit"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
     xmlns:views="clr-namespace:Qhta.SF.WPF.Tools.Views"
     xmlns:resources="clr-namespace:Qhta.SF.WPF.Tools.Resources"
     xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
     xmlns:sys="clr-namespace:System.Globalization;assembly=System.Runtime"
     xmlns:system="clr-namespace:System;assembly=System.Runtime"
     xmlns:data="clr-namespace:Syncfusion.Data;assembly=Syncfusion.Data.WPF"
     xmlns:converters="clr-namespace:Qhta.WPF.Converters;assembly=Qhta.WPF.Converters"
     mc:Ignorable="d" 
     d:DesignHeight="300" d:DesignWidth="300">
  <UserControl.Resources>
    <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type system:Enum}" x:Key="FilterTypeProvider">
      <ObjectDataProvider.MethodParameters>
        <x:Type TypeName="data:FilterType" />
      </ObjectDataProvider.MethodParameters>
    </ObjectDataProvider>
    <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    <converters:EnumToResourceConverter 
      ResourceType="{x:Type resources:FilterTypeStrings}" x:Key="FindInSequenceConverter"/>
  </UserControl.Resources>
  <Grid x:Name="TextEditGrid">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid Grid.Row="0" Margin="10,0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      <ComboBox Grid.Row="0" 
        x:Name="FilterTypeComboBox"
        Margin="0,5"
        Width="200"
        HorizontalAlignment="Left"
        ItemsSource="{Binding Source={StaticResource FilterTypeProvider}}"
        SelectedItem="{Binding RelativeSource={RelativeSource AncestorType={x:Type views:SpecificValueWindow}},
                      Path= FilterType}">
        <ComboBox.ItemTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding Converter={StaticResource FindInSequenceConverter},
                       ConverterCulture={x:Static sys:CultureInfo.CurrentUICulture}}" />
          </DataTemplate>
        </ComboBox.ItemTemplate>
      </ComboBox>
      <ToggleButton Grid.Column="1" 
        Width="22" Height="22"
        Margin="0,5"
        VerticalAlignment="Top"
        BorderBrush="Transparent"
        BorderThickness="0"
        Background="Transparent"
        IsChecked="{Binding RelativeSource={RelativeSource AncestorType={x:Type views:SpecificValueWindow}},
          Path= CaseSensitive}">
        <Image Source="pack://application:,,,/Qhta.SF.WPF.Tools;component/Assets/aA.png" Width="16" Height="16"/>
      </ToggleButton>
    </Grid>
    <syncfusion:SfTextBoxExt Grid.Row="1" 
        x:Name="ValueTextBox"
        Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type views:SpecificValueWindow}},
          Path= TextValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
        Margin="10,5"
        MinHeight="22"
        VerticalScrollBarVisibility="Auto"
        AcceptsReturn="True"
        Watermark="{x:Static resources:Strings.EmptyValue}"/>
    <GridSplitter Grid.Row="1"
                  Height="5"
                  VerticalAlignment="Bottom"/>
    <CheckBox Grid.Row="2" 
      x:Name="ReplaceCheckBox"
      Margin="10,5"
      IsChecked="{Binding RelativeSource={RelativeSource AncestorType={x:Type views:SpecificValueWindow}},
        Path= Replace, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
      Content="{x:Static resources:Strings.ReplaceWith}"/>
    <syncfusion:SfTextBoxExt Grid.Row="3" 
      x:Name="ReplaceTextBox"
      Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type views:SpecificValueWindow}},
        Path= ReplacementText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
      Visibility="{Binding RelativeSource={RelativeSource AncestorType={x:Type views:SpecificValueWindow}},
                                 Path= Replace,
                           Converter={StaticResource BoolToVisibilityConverter}}"
      Margin="10,5"
      MinHeight="22"
      VerticalScrollBarVisibility="Auto"
      AcceptsReturn="True"
      Watermark="{x:Static resources:Strings.EmptyValue}"/>
  </Grid>
</UserControl>
